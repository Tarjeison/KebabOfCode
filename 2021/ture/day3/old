package main
import java.io.File

fun main(){
	partOne()
	partTwo()
	
}

fun partOne(){
	val inputList = mutableListOf<String>()
	File("day3/input.txt").useLines{ lines -> lines.forEach { inputList.add(it) }}
    var bitSum = mutableListOf<Int>()
    inputList[0].forEach { bitSum.add(0) }
    
	inputList.forEach{
        var i = 0
        for (bit in it){
            bitSum[i] += Character.getNumericValue(bit)
            i++
        }
    }
    var gamma = ""
    var epsilon = ""
    bitSum.forEach { 
        if (it > inputList.size/2 ){
            gamma+="1"
            epsilon += "0"
        }else{
            epsilon+="1"
            gamma +="0"

        }
     }
    val result = gamma.toInt(2) * epsilon.toInt(2)
	println("Part 1: " + result)
}



fun BSum(inputList: MutableList<String>):MutableList<Int>{
    var bitSum = mutableListOf<Int>()
    inputList[0].forEach { bitSum.add(0) }
    inputList.forEach {
        var i = 0
        for (bit in it){
            bitSum[i] += Character.getNumericValue(bit)
            i++
        }
    }
    return bitSum
}